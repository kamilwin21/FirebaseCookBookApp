<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idLinearLayoutToAdapterRecipes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleRecipesCategory"
        android:layout_width="match_parent"
        android:background="#6C83A8"
        android:layout_height="150dp"
        android:hint="title recipes"
        android:layout_margin="3dp"
        android:textSize="30dp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/imageViewCategories"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_format_align_center_24"
        />

</RelativeLayout>